{{#unless entry}}
<p>Нет такой записи</p>
{{/unless}}


<h1>{{entry.title}}</h1>

<div class="main-header"><p>{{entry.body}}</p>
<p>Комнаты  {{entry.rooms}}</p>
<p>Местоположение  {{entry.geo}}</p>
<p>Тип   {{entry.type}}</p>
</div>

{{#each images}}
<img src="/uploads/{{image}}" alt="hz"/>

{{/each}}
{{#if isAuthor}}
<ul id="editAndDeleteUl" class="no-bullets no-padding mar-t-2">
  <li class="pipe-separate left">
    <a href="/entries/{{ entry.id }}/edit" class="c-white">edit</a>
  </li>
{{/if}}
