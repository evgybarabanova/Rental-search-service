<ul id="editAndDeleteUl" class="no-bullets no-padding mar-t-2">
<a href="/entries/{{ entry.id }}/edit"><button class="btn btn-secondary">Редактировать</button></a>
    <form action="/entries/delete/{{ entry.id }}" method="post">

    <button id="deleteEntryButton" 
      class="btn btn-secondary">Удалить</button>
    </form>
</ul>
{{/if}}
