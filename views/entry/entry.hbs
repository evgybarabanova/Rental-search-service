{{#unless entry}}
<p>Нет такой записи</p>
{{/unless}}
<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel" style="width: 1000px" >
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/uploads/{{first.image}}" class="d-block w-100" alt="...">
    </div>
    {{#each images}}
     <div class="carousel-item">
      <img src="/uploads/{{image}}" class="d-block w-100" alt="...">
    </div>
   {{/each}} 
  </div>
</div>
 

  

<h1>{{entry.title}}</h1>

<div class="main-header"><p>{{entry.body}}</p>
<p>Комнаты  {{entry.rooms}}</p>
<p>Местоположение  {{entry.geo}}</p>
<p>Тип   {{entry.type}}</p>
</div>

